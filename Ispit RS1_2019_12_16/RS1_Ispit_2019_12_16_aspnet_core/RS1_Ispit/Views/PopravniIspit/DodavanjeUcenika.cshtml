@using RS1_Ispit_asp.net_core.ViewModels
@{
    ViewData["Title"] = "DodavanjeUcenika";
}
@model DodavanjeUcenikaVM
<form  id="formaSnimanjeUcenika" class="form-group" asp-action="DodavanjeUcenika">
    <input asp-for="popravniID" hidden />
    <div class="form-control">
        <label>Ucenik: </label>
        <select asp-for="ucenikID" asp-items="Model.ucenik"></select>
    </div>
    <div class="form-control">
        <label>Bodovi:  </label>
        <input asp-for="bodovi" />
    </div>

</form>
<input id="buttonSnimanjeUcenika" value="Snimi" type="submit" />
<script>
    $("#buttonSnimanjeUcenika").click(function (event) {
        var forma = $("#formaSnimanjeUcenika");

        $.ajax({
            type: "POST",
            url: '/PopravniIspit/DodavanjeUcenika',
            data: forma.serialize(),
            success: function (result) {
                $("#nekiID").html(result);
            }
        });
    });
</script>
