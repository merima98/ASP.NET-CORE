@using RS1_Ispit_asp.net_core.ViewModels
@{
    ViewData["Title"] = "DodavanjeStudenta";
}
@model DodavanjeStudentaNaIspitVM
<form id="formaSnimanjaUcenika" class="form-group" asp-action="DodavanjeStudenta">
    <input asp-for="ispitID" hidden />
    <div class="form-control">
        <label>Student</label>
        <select asp-for="studentID" asp-items="Model.student"></select>
    </div>

    <div class="form-control">
        <label>Bodovi: </label>
        <input asp-for="bodovi" />
    </div>

</form>
<input id="buttonSnimanjaUcenika" value="Snimi" type="submit" />
<script>
    $("#buttonSnimanjaUcenika").click(function (event) {
        var forma = $("#formaSnimanjaUcenika");

        $.ajax({

            data: forma.serialize(),
            type: "POST", 
            url: '/Ispit/DodavanjeStudenta',
            success: function (result) {
                $("#nekiID").html(result);
            }
        });
    });
</script>