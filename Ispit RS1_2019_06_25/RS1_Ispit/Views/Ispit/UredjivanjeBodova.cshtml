@using RS1_Ispit_asp.net_core.ViewModels
@{
    ViewData["Title"] = "UredjivanjeBodova";
}
@model  UredjivanjeBodovaStdentu
<form id="formaUredjivanjeUcenika" class="form-group" action="/Ispit/SnimanjeOcjene">
    <input value="@Model.intDetalji" hidden name="intDetalji" />
    <div class="form-control">
        <label>Student</label>
        <input value="@Model.studentIme" />

    </div>

    <div class="form-control">
        <label>Bodovi: </label>
        <input value="@Model.bodovi" name="bodovi"/>

    </div>

</form>
<input id="buttonUredjivanjeUcenika" value="Snimi" type="submit" />
<script>
    $("#buttonUredjivanjeUcenika").click(function (event) {
        var forma = $("#formaUredjivanjeUcenika");

        $.ajax({
            data: forma.serialize(),
            type: "POST",
            url: '/Ispit/SnimanjeOcjene',
            success: function (result) {
                $("#nekiID").html(result);
            }
        });
    });
</script>